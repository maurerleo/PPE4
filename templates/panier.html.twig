{% block body %}

    {{  include ('header.html.twig') }}



    <div class="container">
        <h2>Panier</h2>

        <table class="table table-dark">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix Unitaire</th>

            </tr>
            </thead>
            <tbody>
            {% set Total = 0 %}
            {% for produit in lepanier %}
            <tr>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.prixht }} €
                </td>

            </tr>
                {% set Total = Total + produit.prixht %}
            {% endfor %}
            <tr>
                <td> </td>
                <td>Total :{{ Total }} €</td> </tr>

            </tbody>
        </table>
        <a type="button" class="btn btn-outline-danger" href="{{ path('paniersuppr')}}">Vider le Panier</a>
    </div>









